{
  "name": "fastchat",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:unit": "jest --testPathPattern=tests/(middlewares|services|utils) --coverage --maxWorkers=50%",
    "test:integration": "jest --testPathPattern=tests/integration --coverage --maxWorkers=50%",
    "test:integration:watch": "jest --testPathPattern=tests/integration --watch --maxWorkers=25%",
    "test:verbose": "jest --verbose --coverage --maxWorkers=50%",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:sequential": "jest --coverage --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codephoenix86/fastchat.git"
  },
  "keywords": [
    "chat",
    "real-time",
    "socket.io",
    "nodejs",
    "rest-api",
    "production-ready"
  ],
  "author": "Naresh Lohar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codephoenix86/fastchat/issues"
  },
  "homepage": "https://github.com/codephoenix86/fastchat#readme",
  "description": "A highly scalable, feature-rich chat API for modern applications, supporting real-time messaging, presence, media sharing, and advanced conversation management",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "envalid": "^8.0.0",
    "express": "^5.2.1",
    "express-request-id": "^3.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.21.0",
    "ms": "^2.1.3",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@types/jest": "^30.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2"
  },
  "_moduleAliases": {
    "@": "src",
    "@root": ".",
    "@config": "src/config",
    "@constants": "src/constants",
    "@controllers": "src/controllers",
    "@docs": "docs",
    "@middlewares": "src/middlewares",
    "@models": "src/models",
    "@repositories": "src/repositories",
    "@routes": "src/routes",
    "@services": "src/services",
    "@sockets": "src/sockets",
    "@tests": "tests",
    "@utils": "src/utils",
    "@uploads": "uploads",
    "@errors": "src/errors"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
